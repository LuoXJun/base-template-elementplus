{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "types": ["vite/client"],

        // 将每个文件作为单独的模块
        "isolatedModules": true,
        "skipLibCheck": true,
        "importHelpers": false,
        "target": "esnext",
        "useDefineForClassFields": true,
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": false,
        "declaration": false,
        // 检查参数隐式any
        "noImplicitAny": true,
        // 严格检查null
        "strictNullChecks": true,
        // 检查函数隐式any
        "noImplicitThis": true,
        "alwaysStrict": true,
        // 检查未使用参数
        "noUnusedLocals": true,
        // 未使用的参数报错
        "noUnusedParameters": true,
        // 不是所有函数都有返回值时报错
        "noImplicitReturns": false,
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": false,
        // 只去掉类型注释而不进行语法降级
        "erasableSyntaxOnly": false,
        // 不允许case穿透，即每次使用case后都需要加上break等结束语
        "noFallthroughCasesInSwitch": true,
        // 数组边缘检查--关闭后会默认数组不会越界，eg:arr.length===5时，arr[index]---ts会认为[0<=index<=4]
        "noUncheckedIndexedAccess": false,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
